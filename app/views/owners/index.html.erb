<p id="notice"><%= notice %></p>

<h1>Active Owners in PATS</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.street %></td>
        <td><%= owner.city %></td>
        <td><%= owner.state %></td>
        <td><%= owner.zip %></td>
        <td><%= number_to_phone owner.phone %></td>
        <td><%= owner.email %></td>
        <td><%= owner.active %></td>
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="paginate">
<%= will_paginate @owners, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %> 
</span>

<%= link_to 'New Owner', new_owner_path %>
