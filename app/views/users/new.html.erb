<%# More on Simple form: https://github.com/heartcombo/simple_form %>
<h1>Create a New Account</h1>
  <%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="form-inputs">
        <%= f.input :username %>
        <%= f.input :first_name %>
         <%= f.input :last_name %>
        <%= f.input :role, collection: ['vet', 'assistant'], include_blank: true %>
        <%= f.input :password%>
        <%= f.input :password_confirmation%>
        <%= f.input :active, as: :boolean, boolean_style: :inline%>
      </div>
    </div>
    <div class="row">
      <div class="form-actions col s8">
        <%= f.button :submit, "Sign Up"%>
      </div>
    </div>
  <% end %>
 
